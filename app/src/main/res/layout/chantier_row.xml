<?xml version="1.0" encoding="utf-8"?>
<!-- layout/*.xml -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vue_liste_c"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    >

    <ImageView
        android:id="@+id/imvchantier"
        android:layout_width="137dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/chantier1"
        />

    <TextView
        android:id="@+id/txt_nomChantier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="@string/chantier_1"
        android:textSize="20dp"
        android:textAppearance="@style/chantier_1"
        />

    <TextView
        android:id="@+id/txt_locationChantier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="@string/keur_massar"
        android:textAppearance="@style/keur_massar"
        android:gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/progress_chantier"
        android:layout_width="181dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/progress"
        />




</android.support.v7.widget.CardView>